<%= form_for :sites, url: batch_update_admin_sites_path do %>
  <%= hidden_field_tag :ids, params[:collection_selection].join(', ') %>

  <div>
    <%= label_tag :billing_status %>
    <%= select_tag :billing_status, options_for_select(Site::BILLING_STATUSES) %>
  </div>
  <br>

  <div>
    <%= label_tag :weather_station_installed %>
    <%= select_tag :weather_station_installed, options_for_select([['Yes', true], ['No', false]]) %>
  </div>
  <br>
  <%= submit_tag 'Update Sites' %>
<% end %>
